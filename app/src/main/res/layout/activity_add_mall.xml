<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_mall"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abhiraj.offerskyfirebase.ui.AddMall">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/state_key_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="state key"
            android:inputType="textCapCharacters"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/a">
        <EditText
            android:id="@+id/city_key_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="city key"
            android:inputType="number"
            android:layout_below="@id/state_key_et"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/b">
        <EditText
            android:id="@+id/mall_name_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="mall name"
            android:layout_below="@id/city_key_et"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/c">
        <EditText
            android:id="@+id/mall_key_et"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="mall key (eg mdg)"
            android:inputType="textCapCharacters"
            android:layout_below="@id/mall_name_et"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/okBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OK"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>
