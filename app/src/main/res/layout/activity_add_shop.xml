<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_add_shop"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.abhiraj.offerskyfirebase.ui.AddShop">

    <android.support.design.widget.TextInputLayout
        android:id="@+id/a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/state_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="state key"
            android:inputType="textCapCharacters"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/b"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/a">
        <EditText
            android:id="@+id/city_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="city key"
            android:inputType="number"
            android:layout_below="@id/state_key"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/c"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/b">
        <EditText
            android:id="@+id/mall_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="mall key"
            android:inputType="textCapCharacters"
            android:layout_below="@id/city_key"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/d"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/c">
        <EditText
            android:id="@+id/shop_key"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="shop key"
            android:inputType="number"
            android:layout_below="@id/mall_key"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/d">
        <EditText
            android:id="@+id/shop_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="shop name"
            android:layout_below="@id/shop_key"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/f"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/e">
        <EditText
            android:id="@+id/shop_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="phone"
            android:inputType="phone"
            android:layout_below="@id/shop_name"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/g"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/f">
        <EditText
            android:id="@+id/shop_email"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="email"
            android:inputType="textEmailAddress"
            android:layout_below="@id/shop_phone"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/h"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/g">
        <EditText
            android:id="@+id/shop_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="location"
            android:layout_below="@id/shop_email"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/i"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/h">
        <EditText
            android:id="@+id/shop_image_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="shop image url"
            android:inputType="textWebEditText"
            android:layout_below="@id/shop_location"/>
    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:id="@+id/j"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/i">
        <EditText
            android:id="@+id/brand_image_url"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="brand image url"
            android:inputType="textWebEditText"
            android:layout_below="@id/shop_image_url"/>
    </android.support.design.widget.TextInputLayout>

    <Button
        android:id="@+id/okBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:text="Ok"/>
</RelativeLayout>
